<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="corp.poopapps.afinal.RegistroActivity">

    <LinearLayout
        android:id="@+id/LogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/whitesmoke"
            android:src="@mipmap/statuevenusicon" />

        <EditText
            android:id="@+id/eCorreo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/whitesmoke"
            android:drawableStart="@mipmap/email"
            android:gravity="center"
            android:hint="@string/usuario"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eContrasena"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/whitesmoke"
            android:drawableStart="@mipmap/password"
            android:gravity="center"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eContrasena2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/whitesmoke"
            android:drawableStart="@mipmap/password"
            android:gravity="center"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bIngreso"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/orangered"
            android:drawableStart="@mipmap/upbutton"
            android:onClick="onClick"
            android:text="@string/REGISTRAR"
            android:textColor="@color/beige"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
